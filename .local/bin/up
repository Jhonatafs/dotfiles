#!/bin/bash

# Cores
GREEN='\033[0;32m'
BLUE='\033[0;34m'
NC='\033[0m'

echo -e "${BLUE}Atualização do Sistema...${NC}"

# 1. Atualizar Pacman + AUR (O paru já chama o sudo pacman -Syu internamente)
echo -e "${GREEN}-> Atualizando Arch Linux (Repo + AUR)...${NC}"
paru -Syu --noconfirm

# 2. Atualizar Flatpaks
echo -e "${GREEN}-> Atualizando Flatpaks...${NC}"
flatpak update -y

# 3. Limpeza de pacotes órfãos (Opcional, mas bom para manter minimalismo)
echo -e "${GREEN}-> Removendo pacotes órfãos...${NC}"
paru -c

echo -e "${BLUE}Sistema e Pacotes Atualizados...${NC}"
